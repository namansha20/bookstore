{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "maven-build",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$maven",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "maven-clean",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean"
            ],
            "problemMatcher": "$maven"
        },
        {
            "label": "maven-install",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install"
            ],
            "problemMatcher": "$maven"
        },
        {
            "label": "maven-test",
            "type": "shell",
            "command": "mvn",
            "args": [
                "test"
            ],
            "problemMatcher": "$maven",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "deploy-to-tomcat",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/target/bookhub.war",
                "${env:CATALINA_HOME}/webapps/"
            ],
            "dependsOn": "maven-build",
            "problemMatcher": []
        },
        {
            "label": "stop-tomcat",
            "type": "shell",
            "command": "echo",
            "args": [
                "Tomcat stopped (configure this task based on your setup)"
            ],
            "problemMatcher": []
        }
    ]
}
